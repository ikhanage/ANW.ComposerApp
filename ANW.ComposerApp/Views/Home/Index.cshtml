@model IDictionary<int, string>

@{
    ViewBag.Title = "Home";
}
@Scripts.Render("~/Script/HomeScripts")

<div class="jumbotron">
    <h1>Audionetwork</h1>
    <p class="lead">Find music to be passionate about</p>
    
</div>

<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center">Composer Names</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var composer in Model)
            {
                    <tr>
                        <td class="text-center">
                            @Html.ActionLink(composer.Value, "About", "Home", new { composerId = composer.Key }, null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <b id="composerCount"></b>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        ComposerList.SetComposerCount(@Model.Count);
    });
</script>